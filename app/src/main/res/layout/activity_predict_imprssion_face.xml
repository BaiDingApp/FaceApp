<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/predict_impression_face_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/action_uploaded_photo_prediction_impression"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="@string/face_image_output_rate"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_pick_photo_predict_impression_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/button"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/pick_face_photo"/>

            <Button
                android:id="@+id/action_upload_photo_predict_impression_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/button"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/upload_face_photo"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/who_is_it"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/red"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">

            <View
                android:layout_height="1dp"
                android:background="#FF909090" />
            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_age"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_age_interval"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_education"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_education_levels"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_occupation"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_occupations"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_birth_place"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_birth_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_place"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_work_place"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_work_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_place"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_oversea"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_oversea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_yes_no"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_single"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_yes_no"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_religion"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_yes_no"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />


            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_pet"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/action_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_yes_no"/>
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#FF909090" />

        </TableLayout>


        <Button
            android:id="@+id/action_predict_impression_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="@string/predict_impression_face"/>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/predict_impression_face_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>


    </LinearLayout>

</ScrollView>



